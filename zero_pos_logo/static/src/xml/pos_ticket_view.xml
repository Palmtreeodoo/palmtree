<?xml version="1.0" encoding="UTF-8"?>
<templates id="point_of_sale.template" xml:space="preserve">
    <t t-extend="OrderReceipt">
        <t t-jquery='.pos-receipt' t-operation='replace'>
            <div class="pos-receipt">
                <!-- receipt header -->
                <div>
                    <!-- Image -->
                    <div style="width: 100%;float: left;padding: 10px 1px; ">
                        <t t-if='widget.pos.config.image'>
                            <img t-att-src="a2" style="width:100%"/>
                        </t>
                        <t t-if='!widget.pos.config.image'>
                            <img src='/web/binary/company_logo' style="width:100%"/>
                        </t>
                    </div>
                    <!-- Company -->
                    <div style="width: 90%; float: left; padding: 0px 10px; text-align:center;">
                        <!-- Company & Shop -->
                        <t t-if="widget.pos.company.name">
                            <b style="font-family: 'Times New Roman', Times, serif;font-size:18px"><t t-esc="widget.pos.company.name"/></b><br />
                        </t>
                        <t t-if="widget.pos.company.street">
                            <t t-esc="widget.pos.company.street"/>,
                        </t>
                        <t t-if="widget.pos.company.street2">
                            <t t-esc="widget.pos.company.street2"/>,
                        </t>
                        <t t-if="widget.pos.company.city">
                            <t t-esc="widget.pos.company.city"/><br />
                        </t>
                        <t t-if="widget.pos.company.state_id[1]">
                            <t t-esc="widget.pos.company.state_id[1]"/><br />
                        </t>
                        <t t-if="widget.pos.company.country_id[1]">
                            <t t-esc="widget.pos.company.country_id[1]"/><br />
                        </t>


                        <t t-if="widget.pos.company.vat">
                            VAT: <t t-esc="widget.pos.company.vat"/><br />
                        </t>
                           <!-- Company data -->
                        <t t-if="widget.pos.company.phone">
                            Tel: <t t-esc="widget.pos.company.phone"/><br />
                        </t>
                        <t t-if="widget.pos.company.email">
                            <t t-esc="widget.pos.company.email"/><br />
                        </t>
                        Served by: <t t-esc="widget.pos.cashier ? widget.pos.cashier.name : widget.pos.user.name"/><br />
                        
                    </div>
                </div>
                <br />

                <!-- No. (order.name) Simplified invoice -->
                <div style="text-align:center;">
                   Invoice Number: <t t-esc="order.name"/>
                    <br />
                </div>
                <div>
                    <div style="width: 100%; float: left; text-align:center;">
                        <!-- Date -->
                        <t t-esc="moment().format('L LT')"/><br />
                    </div>

                </div>
                <div style="width: 100%; float: left; text-align:left;font-size: small;">
                    <!-- Customer -->
                    <t t-set="client" t-value="order.get_client()"/>
                    <t t-if="client">
                        <br />
                        Customer: <t t-esc="client['name']"/><br />
                            <!-- <t t-esc="client['street']"/><br /> -->
                            <!-- <t t-esc="client['mobile']"/><br /> -->
                        <t t-if="client['phone']">
                            Ph: <t t-esc="client['phone']"/><br />
                        </t>
                        <t t-if="client['vat']">
                            VAT: <t t-esc="client['vat']"/>
                        </t>
                        <br />
                    </t>
                </div>

                <br />
                <br />

                <!-- Header -->
                <t t-if="receipt.header">
                    <div style='text-align:center'>
                        <t t-esc="receipt.header" />
                    </div>
                    <br/>
                </t>

                <!-- Items -->
                <table class='orderline'>
                    <colgroup>
                        <col width='5%' />
                        <col width='30%' />
                        <col width='20%' />
                        <col width='5%' />
                        <col width='30%' />
                    </colgroup>
                    <tr style="border-bottom: 1px solid rgb(0, 0, 0); padding-top: 10px;">
                        <th>SL</th>
                        <th>Name</th>
                        <th>Qty</th>
                        <th>Unit</th>
                        <th style='text-align:right'>Price</th>
                    </tr>
                    <t t-set="sl" t-value="0"/>
                    <tr t-foreach="orderlines" t-as="orderline">
                        <t t-set="sl" t-value="sl+1"/>
                        <td><t t-esc="sl" /></td>
                        <td>
                            <t t-esc="orderline.get_product().display_name"/>
<!--                            <t t-if="orderline.get_discount() > 0">-->
<!--                                <div class="pos-disc-font">-->
<!--                                    With a <t t-esc="orderline.get_discount()"/>% discount-->
<!--                                </div>-->
<!--                            </t>-->
                        </td>
                        <td>
                            <t t-esc="orderline.get_quantity_str()"/>
                        </td>
                        <td>
                            <t t-esc="orderline.get_unit().name"/>
                        </td>
                        <td style='text-align:right'>
                            <t t-esc="widget.format_currency(orderline.get_display_price())"/>
                        </td>
                    </tr>
                </table>
                <br />

                <!-- Total -->
                <table class='receipt-total'>
                    <colgroup>
                        <col width='30%' />
                        <col width='15%' />
                        <col width='35%' />
                    </colgroup>
                    <tr style="font-family: 'Times New Roman', Times, serif;font-size:14px">
                        <td></td>
                        <td>Subtotal:</td>
                        <td style='text-align:right'>
                            <t t-esc="widget.format_currency(order.get_total_without_tax())"/>
                        </td>
                    </tr>
                    <t t-foreach="order.get_tax_details()" t-as="taxdetail">
                        <tr style="font-family: 'Times New Roman', Times, serif;font-size:14px">
                            <td></td>
                            <td><t t-esc="taxdetail.name" /></td>
                            <td style='text-align:right'>
                                <t t-esc="widget.format_currency(taxdetail.amount)"/>
                            </td>
                        </tr>
                    </t>
<!--                    <tr style="font-family: 'Times New Roman', Times, serif;font-size:15px">-->
<!--                        <td></td>-->
<!--                        <td>Discount:</td>-->
<!--                        <td style='text-align:right'>-->
<!--                            <t t-esc="widget.format_currency(order.get_total_discount())"/>-->
<!--                        </td>-->
<!--                    </tr>-->
                    <tr class="emph" style="font-family: 'Times New Roman', Times, serif;font-size:18px">
                        <td></td>
                        <td><b>Total:</b></td>
                        <td style='text-align:right'>
                            <b><t t-esc="widget.format_currency(order.get_total_with_tax())"/></b>
                        </td>
                    </tr>
                    <tr> <td colspan="3"><br/></td></tr>

                    <t t-foreach="paymentlines" t-as="line">
                        <tr style="font-family: 'Times New Roman', Times, serif;font-size:14px" class='receipt-paymentlines'>
                            <td></td>
                            <td>
                                <t t-esc="line.name"/>
                            </td>
                            <td style='text-align:right'>
                                <t t-esc="widget.format_currency(line.get_amount())"/>
                            </td>
                        </tr>
                    </t>
                    <tr style="font-family: 'Times New Roman', Times, serif;font-size:14px" class='receipt-change'>
                        <td></td>
                        <td>Change:</td>
                        <td style='text-align:right'>
                        <t t-esc="widget.format_currency(order.get_change())"/>
                        </td>
                    </tr>
                </table>

                <!-- Payment -->
<!--                <table class='receipt-paymentlines'>-->
<!--                    <colgroup>-->
<!--                        <col width='20%' />-->
<!--                        <col width='30%' />-->
<!--                        <col width='30%' />-->
<!--&lt;!&ndash;                        <col width='29%' />&ndash;&gt;-->
<!--                    </colgroup>-->
<!--                    <t t-foreach="paymentlines" t-as="line">-->
<!--                      <tr style="font-family: 'Times New Roman', Times, serif;font-size:15px">-->
<!--                          <td>-->
<!--                          </td>-->
<!--                          <td>-->
<!--                              <t t-esc="line.name"/>-->
<!--                          </td>-->
<!--                          <td style='text-align:right'>-->
<!--                              <t t-esc="widget.format_currency(line.get_amount())"/>-->
<!--                          </td>-->
<!--                      </tr>-->
<!--                    </t>-->
<!--                </table>-->

<!--                &lt;!&ndash; Change &ndash;&gt;-->
<!--                <table class='receipt-change'>-->
<!--                    <colgroup>-->
<!--                        <col width='20%' />-->
<!--                        <col width='30%' />-->
<!--                        <col width='30%' />-->
<!--&lt;!&ndash;                        <col width='29%' />&ndash;&gt;-->
<!--                    </colgroup>-->
<!--                    <tr style="font-family: 'Times New Roman', Times, serif;font-size:15px">-->
<!--                        <td></td>-->
<!--                        <td>Change:</td>-->
<!--                        <td style='text-align:right'>-->
<!--                        <t t-esc="widget.format_currency(order.get_change())"/>-->
<!--                        </td>-->
<!--                    </tr>-->
<!--                </table>-->

                <!-- Footer -->
                <t t-if="receipt.footer">
                    <br />
                    <div style='text-align:center'>
                        <t t-esc="receipt.footer" />
                    </div>
                </t>
            </div>
        </t>
    </t>
</templates>
