<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    <data noupdate="1">-->
    <record id="pos_receipt_design_reprint_1" model="pos.receipt.design">
        <field name="name">POS Receipt Design Reprint 1</field>
        <field name="receipt_design" type="html">
            <div class="pos-receipt">
                <div class="logo-style" align="center" style="height:120px;">
                    <t t-if='receipt.company.logo'>
                        <img t-att-src='receipt.company.logo' style="height:140px;width:216px;"/>
                        <br/>
                    </t>
                    <t t-if='!receipt.company.logo'>
                        <h1>
                            <t t-esc='receipt.company.name'/>
                        </h1>
                        <br/>
                    </t>
                </div>
                <br/>
                <br/>
                <t t-if="order.pos_invoice_number">
<!--                    <div>&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;</div>-->
                    INV number:
                    <t t-esc="order.pos_invoice_number"/>
                    <br></br>
                    <br/>
                </t>
                <t t-if="receipt.header">
                    <div style='text-align:center;font-family:Calibri;font-size:12px;'>
                        <t t-esc="receipt.header"/>
                        <br/>
                        <t t-if="receipt.footer">
                            PH:
                            <t t-esc="receipt.footer || ''"/>
                        </t>
                        <br/>
                        EMAIL:
                        <t t-esc='receipt.company.email'/>
                        <br/>
                        GSTIN:
                        <t t-esc="receipt.company.company_registry"/>
                        <br/>
                        RETAIL INVOICE
                        <br/>
                        ORIGINAL
                    </div>
                </t>
                <div style='text-align:left;font-family:Calibri;font-size:12px;'>
                    <span>
                        Place of Supply:Kerala &amp; 32
                        <br/>
                        Order No:
                        <t t-esc="order.name"/>
                        <br/>
                        Dt:
                        <t t-esc="receipt.date"/>
                        <br/>
                        Cashier:
                        <t t-esc="widget.pos.cashier ? widget.pos.cashier.name : widget.pos.user.name"/>
                        <br/>
                        <t style='font-size:12px;text-align:left;' t-if="order.partner_id">
                            <br/>
                            Customer :
                            <t style='text-align:left;' t-esc="order.partner_name"/>
                            <t t-if="order.vat">
                                <t t-if="order.street">
                                    <br/>
                                    <t t-esc="order.street"/>
                                </t>
                                <t t-if="order.street2">
                                    <br/>
                                    <t t-esc="order.street2"/>
                                </t>
                                <t t-if="order.city">
                                    <br/>
                                    <t t-esc="order.city"/>
                                </t>
                                <t t-if="order.state">
                                    <br/>
                                    <t t-esc="order.state"/>
                                </t>
                            </t>
                            <t style='font-size:12px;text-align:left;' t-if="order.phone">
                                <br/>
                                Mobile No :
                                <t style='text-align:left;' t-esc="order.phone"/>
                            </t>
                            <t t-if="order.vat">
                                <br/>
                                GSTIN:
                                <t t-esc="order.vat"/>
                                <br/>
                            </t>
                        </t>
                    </span>
                </div>
                <br></br>
                <hr style="display: block;
                        margin-top: 0.5em;
                        margin-bottom: 0.5em;
                        margin-left: auto;
                        margin-right: auto;
                        border-style: dashed;
                        border-width: 1px;"></hr>
                <table class='receipt-orderlines' style="font-size:12px;font-family:Calibri;">
                    <colgroup>
                        <col width="18%"/>
                        <col width='30%'/>
                        <col width='22%'/>
                        <col width='30%'/>
                        <!--<col width='15%'/>-->
                        <!--<col width='22%'/>-->
                    </colgroup>
                    <tr style="font-size:12px;font-family:Calibri ;">
                        <td align="left">
                            Sl.
                        </td>
                        <td align="left">
                            Description
                        </td>
                        <td align="left">
                            HSN/SAC
                        </td>
                        <td align="right">
                            Tax %
                        </td>
                    </tr>
                    <tr style="font-size:12px;font-family:Calibri ;">
                        <td align="right" style="border-bottom: 1px  dashed gray;">
                            Rate
                        </td>
                        <td align="right" style="border-bottom: 1px  dashed gray;">
                            Qty
                        </td>
                        <td align="right" style="border-bottom: 1px  dashed gray;" colspan="2">
                            Amount
                        </td>
                    </tr>
                    <t t-set="sl" t-value="0"/>
                    <t t-set="i" t-value="0"/>
                    <t t-set="j" t-value="0"/>
                    <t t-set="qty" t-value="0"/>
                    <t t-set="discount" t-value="0"/>
                    <t t-foreach="orderlines" t-as="orderline">
                        <t t-if="orderline.product_id == 'Discount'">
                            <t t-set="discount" t-value="discount+orderline.price_unit"/>
                        </t>
                        <t t-if="orderline.product_id!='Discount'">
                            <tr style="font-size:12px">
                                <td class="pos-left-align" style="font-size:12px;font-family:Calibri !important;">
                                    <br/>
                                    <t t-set="sl" t-value="sl+1"/>
                                    <t t-esc="sl"/>
                                </td>
                                <td class="pos-left-align" style="font-size:12px;font-family:Calibri !important;">
                                    <br/>
                                    <t t-esc="orderline.product_id"/>
                                    <!--<t t-if="orderline.get_discount() > 0">-->
                                    <!--<div class="pos-disc-font">-->
                                    <!--With a<t t-esc="orderline.get_discount()"/>% discount-->
                                    <!--</div>-->
                                    <!--</t>-->
                                </td>
                                <td class="pos-left-align" style="font-size:12px;font-family:Calibri !important;">
                                    <br/>
                                    <t t-if="orderline.hsn">
                                        <t t-esc="orderline.hsn"/>
                                    </t>
                                </td>
                                <td class="pos-right-align" style="font-size:12px;font-family:Calibri !important;">
                                    <br/>
                                    <t t-esc="orderline.tax_name"/>
                                </td>
                            </tr>
                            <tr style="font-size:12px">
                                <td class="pos-right-align" style="font-size:12px;font-family:Calibri !important;">
                                    <t t-esc="widget.format_currency_no_symbol(orderline.price_unit)"/>
                                </td>
                                <td class="pos-right-align" style="font-size:12px;font-family:Calibri !important;">
                                    <t t-esc="orderline.qty"/>
                                    <t t-set="qty" t-value="qty+orderline.qty"/>
                                </td>
                                <td class="pos-right-align" colspan="2"
                                    style="font-size:12px;font-family:Calibri !important;">
                                    <t t-esc="widget.format_currency_no_symbol(orderline.price_subtotal_incl)"/>
                                    <t t-set="j" t-value="j + (orderline.price_subtotal_incl)"/>
                                </td>
                            </tr>
                        </t>
                    </t>
                </table>
                <hr style="display: block;
                        margin-top: 0.5em;
                        margin-bottom: 0.5em;
                        margin-left: auto;
                        margin-right: auto;
                        border-style: dashed;
                        border-width: 1px;"></hr>
                <table width="100%" class='receipt-total' style="font-family:Calibri !important;font-size: 12px;">
                    <tr style="font-family:Calibri !important;font-size: 12px;">
                        <td class="pos-center-align" width="20%">
                        </td>
                        <td class="pos-right-align" width="50%">
                            Amount:
                        </td>
                        <td class="pos-right-align" width="30%">
                            <t t-esc="widget.format_currency_no_symbol(order.tot_amount-discount)"/>
                        </td>
                    </tr>
                    <tr style="font-family:Calibri !important;font-size: 12px;">
                        <td class="pos-center-align" width="20%">
                        </td>
                        <td class="pos-right-align" width="50%">
                            Discount:
                        </td>
                        <td class="pos-right-align" width="30%">
                            <t t-set="dis" t-value="widget.format_currency_no_symbol(order.discount)"/>
                            <t t-esc="-1*(discount)"/>
                        </td>
                    </tr>
                    <tr style="font-family:Calibri !important;font-size: 12px;">
                        <td class="pos-center-align" width="20%">
                        </td>
                        <td class="pos-right-align" width="50%">
                            <t t-if="(order.amount_paid-order.tot_amount)">
                                <t t-if="1 &lt; (order.amount_paid-order.tot_amount)">
                                    ROA:
                                </t>
                                <t t-if="1  &gt; (order.amount_paid-order.tot_amount)">
                                    ROD:
                                </t>
                            </t>
                            <t t-if="!(order.amount_paid-order.tot_amount)">
                                ROD:
                            </t>
                        </td>
                        <td class="pos-right-align" width="30%">
                            <t t-esc="widget.format_currency_no_symbol(order.amount_paid-order.tot_amount)"/>
                        </td>
                    </tr>
                    <tr style="font-family:Calibri !important;font-size: 12px;">
                        <td class="pos-center-align" width="20%">
                        </td>
                        <td class="pos-right-align" style="font-family:Calibri !important;font-size: 14px;" width="50%">
                            <b>Total Amount:</b>
                        </td>
                        <td class="pos-right-align" width="30%">
                            <b>
                                <t t-esc="widget.format_currency_no_symbol(order.amount_paid)"/>
                            </b>
                        </td>
                    </tr>
                </table>
                <br/>
                <span style="font-size:12px;text-align:left;font-family:Calibri !important;">Total Prod/Qty :<t
                        t-esc="sl"/>/
                    <t t-esc="qty"/>
                </span>
                <br/>
                <span style="font-size:12px;text-align:left;font-family:Calibri !important;">Tax Breakup
                </span>
                <br/>
                <t t-set="cgstt" t-value="0"/>
                <t t-set="gstt" t-value="0"/>
                <t t-set="kfcc" t-value="0"/>
                <t t-set="cesss" t-value="0"/>
                <t t-foreach="hsn_tax" t-as="taxdetail">
                    <t t-if="taxdetail.kfc">
                        <t t-set="kfcc" t-value="kfcc+taxdetail.amount"/>
                    </t>
                    <t t-if="taxdetail.cess">
                        <t t-set="cesss" t-value="cesss+taxdetail.amount"/>
                    </t>
                    <t t-if="!taxdetail.kfc and !taxdetail.cess">
                        <t t-set="gstt" t-value="gstt+taxdetail.amount"/>
                    </t>
                </t>
                <table class='receipt-total' style="font-family:Calibri !important;font-size: 12px;">
                    <t t-if="order.fiscal_position">
                        <tr style="font-family:Calibri !important;font-size: 12px;">
                            <td class="pos-left-align">
                                IGST
                            </td>
                            <td>
                                :
                            </td>
                            <td class="pos-left-align">
                                <t t-esc="widget.format_currency_no_symbol(gstt)"/>
                            </td>
                            <td class="pos-left-align"></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </t>
                    <t t-if="!order.fiscal_position">
                        <tr style="font-family:Calibri !important;font-size: 12px;">
                            <td class="pos-left-align">
                                CGST
                            </td>
                            <td>
                                :
                            </td>
                            <td class="pos-left-align">
                                <t t-esc="widget.format_currency_no_symbol(gstt/2)"/>
                            </td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr style="font-family:Calibri !important;font-size: 12px;">
                            <td class="pos-left-align">
                                SGST
                            </td>
                            <td>
                                :
                            </td>
                            <td class="pos-left-align">
                                <t t-esc="widget.format_currency_no_symbol(gstt/2)"/>
                            </td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </t>
                    <t t-if="cesss!=0">
                        <tr style="font-family:Calibri !important;font-size: 12px;">
                            <td class="pos-left-align">
                                CESS
                            </td>
                            <td>
                                :
                            </td>
                            <td class="pos-left-align">
                                <t t-esc="widget.format_currency_no_symbol(cesss)"/>
                            </td>
                            <td class="pos-left-align"></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </t>
                    <t t-if="kfcc!=0">
                        <tr style="font-family:Calibri !important;font-size: 12px;">
                            <td class="pos-left-align">
                                KFC
                            </td>
                            <td>
                                :
                            </td>
                            <td class="pos-left-align">
                                <t t-esc="widget.format_currency_no_symbol(kfcc)"/>
                            </td>
                            <td class="pos-left-align"></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </t>
                </table>
                <span style="font-size:12px;text-align:left;font-family:Calibri !important;">Payment Details :
                    <br/>
                    <t t-foreach="paymentlines" t-as="line">
                        <t t-esc="line.name"/>
                        =
                        <t t-esc="widget.format_currency_no_symbol(line.amount)"/>
                        <br/>
                    </t>
                </span>
                <span style="font-size:12px;text-align:left;font-family:Calibri !important;">
                    Change =
                    <t t-esc='widget.format_currency_no_symbol(change)'/>
                </span>
                <br/>
                <hr></hr>
                <div align="right" style="font-size:12px;font-family:Calibri !important;">
                    Authorised Signature
                    <br/>
                </div>
                <br/>
                <span style="font-size:12px;text-align:left;font-family:Calibri !important;">
                    (price inclusive of all taxes)
                </span>
                <br/>
                <span style="font-size:12px;text-align:left;font-family:Calibri !important;">
                    Please Verify items before leaving
                    <t t-esc='receipt.company.name'/>
                    <br/>
                    E &amp; O.E
                </span>
                <div align="center" style='font-size:12px;font-family:Calibri !important;'>
                    ***********Thank You Visit Again***********
                    <br/>
                    No cash Refund
                </div>
            </div>
        </field>
    </record>
    <!--    </data>-->
</odoo>